@model Food_Sharing_Food.Models.Foods

@{
    ViewBag.Title = "Create";
    //Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";
}

<link rel="stylesheet" href="~/Areas/Admin/Content/Create.css">

<h2 class="text-center">Thêm món ăn </h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group hidden">
                    @Html.LabelFor(model => model.FoodsId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FoodsId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FoodsId, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label" for="Name">Tên Món Ăn</label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter food name" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label" for="Address">Địa chỉ</label>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter food address" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label" for="Price">Giá</label>
                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter food price" } })
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label" for="TypeFoodsId">Loại món ăn </label>
                            @Html.DropDownList("TypeFoodsId", new SelectList(Model.ListTypeFoods, "Id", "Name"), "Select type of food", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TypeFoodsId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @*<div class="form-group">
                            <div class="col-md-12">
                                <label class="control-label" for="Image">Image</label>
                                <input type="file" name="Image" class="form-control-file">
                            </div>
                        </div>*@
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-4">
                            <input type="submit" value="Thêm Mới" class="btn btn-outline-success" />
                        </div>
                        <br />
                        <div class="col-md-4">
                            @Html.ActionLink("Hủy ", "Food", "Food", null, new { @class = "btn btn-outline-success" })
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Về trang chủ", "Food", "Food")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}