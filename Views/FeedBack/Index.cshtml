@model Food_Sharing_Food.Models.FeedBack

@{
    ViewBag.Title = "FeedBack";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<!-- Basic -->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Site Metas -->
    <title>Món Ăn Ngon</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Site Icons -->
    <link rel="shortcut icon" href="~/asset/images/favicon.ico" type="image/x-icon">
    <link rel="apple-touch-icon" href="~/asset/images/apple-touch-icon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/asset/css/bootstrap.min.css">
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/asset/css/style.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/asset/css/responsive.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/asset/css/custom.css">
</head>
<body>
    <header class="top-navbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbars-rs-food" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbars-rs-food">
                    <ul class="navbar-nav ml-lg-1">
                        <!-- Thay đổi lớp từ ml-auto thành mr-auto -->
                        <li class="nav-item active"><a class="nav-link" href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Food", "Food")">Món Ăn Ngon</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">Về Chúng Tôi</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "FeedBack")">Liên hệ</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Blog", "Home")">Diễn Đàn</a></li>
                    </ul>
                </div>

                <div>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>
    <div class="all-page-title page-breadcrumb">
        <div class="container text-center">
            <div class="row">
                <div class="col-lg-12">
                    <h1> Kết nối với chúng tôi </h1>
                </div>
            </div>
        </div>
    </div>

    <!-- Start Contact -->
    @*<div class="map-full"></div>*@
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="contact-box">
            <div class="container">
                <div class="row">
                    <!-- Contact Information -->
                    <div class="col-lg-12">
                        <div class="heading-title text-center">
                            <h2>Liên Hệ</h2>
                            <p>Kết nối với chúng tôi bạn nhé</p>
                        </div>
                    </div>
                </div>

                <!-- Form and Image Section -->
                <div class="row">
                    <!-- Form Section -->
                    <div class="col-lg-8">
                        <form id="contactForm">
                            <div class="col-md">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ID, "Mã số", htmlAttributes: new { @class = "control-label col-md-12" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.FullName, "Họ và tên", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-12">
                                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Subject, "Chủ đề", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-10">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Message, "Tin nhắn", htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="submit-button text-center">
                                    <button class="btn btn-common" id="submit" type="submit">Gửi Tin</button>
                                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Image Section -->
                    <div class="col-lg-4">
                        <div class="image-container">
                            <img src="~/asset/images/santa.jpg" alt="Image Description" class="img-fluid">
                            <div class="overlay"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>   
    }
    <!-- Phần menu food-->
    <!--Kết thúc phân trang và trỏ về trang chủ-->
    <!-- Start Footer -->
    <footer class="footer-area bg-f">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <h3>Về Chúng Tôi</h3>
                    <p>Chúng tôi với sứ mệnh mang đến cho mọi người những món ăn ngon, sạch sẽ, cũng như tạo ra cộng động để mọi người chia sẽ những món ăn ngon.</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h3> Đến với chúng tôi</h3>
                    <p>Bạn sẽ không thể rời mắt khỏi màn hình với những món ăn được chia sẻ ở nơi đây</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h3>Thông Tin Liên Hệ</h3>
                    <p class="lead">123 Đường Nguyễn Huệ , Quận 1, TP HCM</p>
                    <p class="lead"><a href="#"> 0912345676</a></p>
                    <p><a href="#">  monanngon@gmail.com</a></p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h3>Phản hồi nhanh</h3>
                    <div class="subscribe_form">
                        <form class="subscribe_form">
                            <input name="EMAIL" id="subs-email" class="form_input" placeholder="Địa chỉ Email..." type="email">
                            <button type="submit" class="submit">Phản Hồi</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                    <ul class="list-inline f-social">
                        <li class="list-inline-item"><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="copyright">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <p class="company-name">
                            &copy; All rights reserved. <a href="#"> 2023 Món Ăn Ngon.</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- End Footer -->
    <a href="#" id="back-to-top" title="Back to top" style="display: none;">&uarr;</a>

    <!-- ALL JS FILES -->
    <script src="~/asset/js/jquery-3.2.1.min.js"></script>
    <script src="~/asset/js/popper.min.js"></script>
    <script src="~/asset/js/bootstrap.min.js"></script>
    <!-- ALL PLUGINS -->
    <script src="~/asset/js/jquery.superslides.min.js"></script>
    <script src="~/asset/js/images-loded.min.js"></script>
    <script src="~/asset/js/isotope.min.js"></script>
    <script src="~/asset/js/baguetteBox.min.js"></script>
    <script src="~/asset/js/form-validator.min.js"></script>
    <script src="~/asset/js/contact-form-script.js"></script>
    <script src="~/asset/js/custom.js"></script>
    <style>
       .image-container {
           position: relative;
            overflow: hidden;
        }

            .image-container img {
                width: 100%;
                height: auto;
                transition: transform 0.5s ease;
            }

            .image-container:hover img {
                transform: scale(1.1);
            }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5); /* Độ mờ của overlay */
            display: flex;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .image-container:hover .overlay {
            opacity: 1;
        }

        .overlay::before {
            content: '\f030'; /* Unicode icon content */
            font-family: 'FontAwesome'; /* Use an icon font */
            font-size: 50px;
            color: #fff;
        }

    </style>


</body>
</html>
